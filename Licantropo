class Licantropo implements Personaggio {
    private int forza;
    private boolean lunaPiena;

    public Licantropo(boolean lunaPiena) {
        this.lunaPiena = lunaPiena;
        if (lunapiena) {
            this.forza = 15;
        } else {
            this.forza = 10;
        }
    }

    @Override
    public void combatti() {
        if (lunaPiena) {
            forza -= 2; 
        } else {
            forza -= 3; 
        }
    }

    @Override
    public int getForza() {
        return forza;
    }
}
